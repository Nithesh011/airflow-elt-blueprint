{
  "name": "Airflow ELT Blueprint",
  "image": "debian:bookworm-slim",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.9"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },
  "postCreateCommand": "curl -sSL https://install.astronomer.io | bash -s -- -v 1.23.0 && pip install 'astro-sdk-python>=1.6.0' && astro dev init",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "portsAttributes": {
    "8080": { "label": "Airflow UI", "onAutoForward": "openBrowser" },
    "8501": { "label": "Streamlit", "onAutoForward": "openBrowser" }
  },
  "remoteUser": "root"
}
